<?xml version='1.0' encoding='utf-8'?>
<widget id="chiro.my.webapps" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MyWebApps</name>
    <description>
        一些网页应用的简单封装.
    </description>
    <author email="Chiro2001@163.com" href="http://www.chiro.work">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="www/imgs/head.png"/>
    <platform name="android">
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="www/imgs/head-36.png" density="ldpi" />
        <icon src="www/imgs/head-48.png" density="mdpi" />
        <icon src="www/imgs/head-72.png" density="hdpi" />
        <icon src="www/imgs/head-96.png" density="xhdpi" />
        <icon src="www/imgs/head-144.png" density="xxhdpi" />
        <icon src="www/imgs/head-192.png" density="xxxhdpi" />
    </platform>
</widget>
